<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCFFFC"
    android:orientation="vertical"
    tools:context=".MainActivity" >

  
  
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#FFCCFFFC" >

     

         <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which room do you want to go?"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="  " >

        <requestFocus />
        
    </EditText>

    
</LinearLayout>

 
  
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:background="#FFCCCFFC"
     android:orientation="horizontal" >
<TextView
         android:id="@+id/textView2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Or select where you want to go"
         android:textAppearance="?android:attr/textAppearanceLarge" />
  
</LinearLayout>
   
     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:background="#FFCCCFFC"
     android:orientation="vertical" >
     <Button
         android:id="@+id/button4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:text="Learning Center" />

     

     <Button
         android:id="@+id/button1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:text="Library" />

     <Button
         android:id="@+id/button2"
          android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:text="Kodiac Corner" />

     <Button
         android:id="@+id/button3"
          android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Book Store" />
 </LinearLayout>
 
         
         
     
 
</LinearLayout>
